<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1 style="font-size: 30px">
                <%= pluralize(@recipes.size, 'Receita', 'Receitas') %>
                <small class="nova_receita" style="font-size: 25px">
                    <%= link_to 'Nova Receita', new_recipe_path %>
                </small>
            </h1>
        </div>
    </div>

    <% @recipes.each do |recipe| %>
        <div class="row align-items-center">
            <div class="col">
                <%= link_to imagem(recipe), recipe %>
            </div>
            <div class="col mb-5">
                <h3><%= link_to recipe.name, recipe %></h3>
                <p><%= truncate(recipe.stuff, length: 15, separator: ' ') %></p>

                <h4>Calorias:</h4>
                <p><%= formata_caloria(recipe) %></p>

                <h4>Tempo de Preparo</h4>
                <p><%= recipe.duration.to_formatted_s(:time) %></p>

                <h4>Custo:</h4>
                <p><%= recipe.cost %></p>
            </div>
        </div>
    <% end %>
</div>